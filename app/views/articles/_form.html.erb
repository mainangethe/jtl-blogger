<%= form_for(@article) do |form| %>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |error_message| %>
        <li> <%= error_message %> </li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %> <br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
